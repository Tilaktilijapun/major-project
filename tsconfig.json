{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./js",
    "rootDir": "./js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./js/*.ts"],
  "exclude": ["node_modules"]
}